apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: sdaf-nginx-route
  annotations:
spec:
  path:  /
  port:
    targetPort: nginx
  to:
    kind: Service
    name: sdaf-nginx-service
  tls:
    termination: "edge"
    insecureEdgeTerminationPolicy: "Redirect"
