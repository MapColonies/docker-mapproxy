# Source: mapproxy/charts/nginx/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: sdaf-nginx-deployment
  labels:
    app: sdaf-nginx
    component: nginx-deployment
    environment: development
    release: sdaf
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sdaf-nginx
      release: sdaf
      run: sdaf-nginx
  template:
    metadata:
      labels:
        app: sdaf-nginx
        release: sdaf
        run: sdaf-nginx
      annotations:
    spec:
      imagePullSecrets:
        - name: "my-registry-secret"
      volumes:
        - name: nginx-base-config
          configMap:	
            name: sdaf-nginx-base-configmap
            
        - configMap:
            name: 'sdaf-nginx-configmap'
          name: nginx-config
        - emptyDir:
            medium: Memory
            sizeLimit: '1000Mi'
          name: cache
      containers:
        - name: nginx-container
          image: my-registry-url.io/nginx:latest
          imagePullPolicy: Always
          env:
          - name: OTEL_SERVICE_NAME
            value: "nginx"
          - name: OTEL_EXPORTER_OTLP_ENDPOINT
            value: "localhost:4317"
          - name: OTEL_TRACES_SAMPELR
            value: "AlwaysOff"
          - name: OTEL_TRACES_SAMPLER_RATIO
            value: "0.1"
          - name: OTEL_TRACES_SAMPLER_PARENT_BASED
            value: "false"
          volumeMounts:
            
            - name: nginx-base-config
              mountPath: "/etc/nginx/log_format.conf"
              subPath: log_format.conf
                
            - mountPath: /etc/nginx/conf.d/default.conf
              name: nginx-config
              subPath: default.conf
            - mountPath: /etc/nginx/nginx.conf
              name: nginx-config
              subPath: nginx.conf
            - mountPath: /etc/nginx/nginx.mapproxy.conf
              name: nginx-config
              subPath: nginx.mapproxy.conf
            - mountPath: /etc/nginx/nginx.mapproxy.wmts.conf
              name: nginx-config
              subPath: nginx.mapproxy.wmts.conf
            - mountPath: /cache
              name: cache 
          ports:
            - name: http
              containerPort: 8080
              protocol: TCP
          livenessProbe:
            initialDelaySeconds: 60
            httpGet:
              path: /nginx_status
              port: 8081
          resources:
            limits:
              cpu: 100m
              memory: 128Mi
            requests:
              cpu: 100m
              memory: 128Mi
---
